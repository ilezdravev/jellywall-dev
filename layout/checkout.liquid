    <script>
        var inputChecked = document.querySelectorAll(':checked');
        var checkedCls = 'input-checked';
        inputChecked.forEach(function(e) {
            var closeEl = e.closest('.content-box__row');
            if (closeEl) {
                closeEl.classList.add(checkedCls);
            }
        });
        var inputs = document.querySelectorAll('.input-radio, .input-checkbox');
        inputs.forEach(function(el) {
            el.addEventListener('change', function() {
                var attrName = this.getAttribute('name');
                var type = this.getAttribute('type');
                var close = this.closest('.content-box__row');
                if (type == 'radio') {
                    var radios = document.querySelectorAll('[name="'+attrName+'"]');
                    
                    radios.forEach(function(e) {
                        e.closest('.content-box__row') && e.closest('.content-box__row').classList.remove(checkedCls);
                    });
                }

                if (this.checked) {
                    close.classList.add(checkedCls);
                } else {
                    close.classList.remove(checkedCls);
                }
            });
        });


        (function($) {
            if ($('.page--thank-you').length) {
                $('.page--thank-you .content-box:first-child .os-step__title').prepend($('.os-header__title').text());
            }
        })(Checkout.$);
    </script>
