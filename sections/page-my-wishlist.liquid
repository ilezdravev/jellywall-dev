{% if customer %}
  <div class="page-2-columns my-account">
		<div class="wrapper">
			<div class="row">
				<div class="col-medium-4">
					{% include 'account-sidebar' %}
				</div>
				<div class="col-medium-8">
					<div class="cms-page cms-page-account">
                      <div class="page-title">
                          <h1 class="h4">{{ page.title }}</h1>
                      </div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% else %}
  <div class="cms-page cms-page-off-account">
  	{% include 'breadcrumbs' %}
    <div class="page-title">
      <h1 class="h4">{{ page.title }}</h1>
    </div>
  </div>
{% endif %}