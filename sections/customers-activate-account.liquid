<div class="account-form cms-page single">
  <div class="wrapper">
      <div class="page-title">
          <h1>{{ 'customer.activate_account.title' | t }}</h1>
          <p>{{ 'customer.activate_account.subtext' | t }}</p>
      </div>
      <div class="row">
          <div class="col-medium-6">
              {% form 'activate_customer_password' %}
                  {{ form.errors | default_errors }}
                  <ul class="form-list">
                      <li>
                          <label for="CustomerPassword">Password *</label>
                          <input type="password" value="" name="customer[password]" id="CustomerPassword" placeholder="{{ 'customer.activate_account.password' | t }}" required>
                      </li>
                      <li>
                          <label for="PasswordConfirmation">Confirm Password *</label>
                          <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" placeholder="{{ 'customer.activate_account.password_confirm' | t }}" required>
                      </li>
                      <li class="buttons">
                          <input type="submit" class="button" value="{{ 'customer.activate_account.submit' | t }}">
                          <input type="submit"  class="button black solid" name="decline" value="{{ 'customer.activate_account.cancel' | t }}"> 
                      </li>
                   </ul>
              {% endform %}
          </div>
      </div>
  </div>
</div>
