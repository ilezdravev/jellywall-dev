<div class="account-form single">
  <div class="wrapper">
      <div class="page-title">
          <h1 class="h3">{{ 'customer.reset_password.title' | t }}</h1>
          <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>
      </div>
      <div class="row">
          <div class="col-medium-6">
              {% form 'reset_customer_password' %}
                  {{ form.errors | default_errors }}
                  <ul class="form-list">
                      <li>
                          <label for="CustomerPassword">New Password *</label>
                          <input placeholder="{{ 'customer.reset_password.password' | t }}" type="password" value="" name="customer[password]" id="ResetPassword" class="{% if form.errors contains 'password' %} input--error{% endif %}" required>
                      </li>
                      <li>
                          <label for="PasswordConfirmation">New Confirm Password *</label>
                          <input placeholder="{{ 'customer.reset_password.password_confirm' | t }}" type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="{% if form.errors contains 'password_confirmation' %} input--error{% endif %}" required>
                      </li>
                      <li class="buttons">
                          <input type="submit" class="btn text-center" value="{{ 'customer.reset_password.submit' | t }}">       
                      </li>
                   </ul>
              {% endform %}
          </div>
      </div>
  </div>
</div>
