
{% if settings.wishlist_enabled %}
    {% include 'juno-wishlist', get: 'collection-init' %}
{% endif %}


{% assign number_of_products = settings.number_of_products | times: 1  %}

<div class="collection-page">
    
    <div class="page-title collection-title"> 
            <div class="row description-block"> 
                <div class="collection-description">
                    {% include 'breadcrumbs' %}
                    <h1 class="h4">{{ collection.title }}</h1> 
                    <div class="content">{{ collection.description }}</div> 
                 </div>
                {%- if collection.image -%}
                  <div class="collection-img-description" style="background-image: url({{ collection.image.src | collection_img_url: 'original' }});"></div>
                {%- else -%}
                  <div class="collection-img-description"></div>
                {%- endif -%}  
            </div> 
    </div>
</div>
