  <script>
    // Function to update the heading based on URL parameters
    function updateHeading() {
      // Get the URL parameters
      const urlParams = new URLSearchParams(window.location.search);

      document.querySelector('h1.h4').textContent = "test";

      // Check if the "text" parameter exists
      if (urlParams.has('text')) {
        // Get the value of the "text" parameter
        const textValue = urlParams.get('text');

        // Update the heading with the text value
        document.querySelector('h1.h4').textContent = textValue;
      }
    }
    
    $('.boost-sd__product-count').on('DOMSubtreeModified', function(){
      console.log('changed');
      updateHeading();
