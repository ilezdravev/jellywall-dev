{% if searchItem %}
    {% assign product = searchItem %}
{% endif %}
<div class="product-item" {% if disabled_by_yoast_seo %}itemscope{% endif %} data-product-id="{{ product.id }}">
    {%- comment -%}Auto-disabled. Yoast plugin is taking care of Meta Tags output.{%- endcomment -%}
{%- if disabled_by_yoast_seo -%}
<meta {% if disabled_by_yoast_seo %}itemprop="brand"{% endif %} content="{{ product.vendor }}" />
{%- comment -%} End Yoast auto-disable. {%- endcomment -%}
{%- endif -%}
    {%- comment -%}Auto-disabled. Yoast plugin is taking care of Meta Tags output.{%- endcomment -%}
{%- if disabled_by_yoast_seo -%}
<meta {% if disabled_by_yoast_seo %}itemprop="sku"{% endif %} content="{{ product.first_available_variant.sku }}" />
{%- comment -%} End Yoast auto-disable. {%- endcomment -%}
{%- endif -%}
